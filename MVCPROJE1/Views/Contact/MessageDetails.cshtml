@model EntityLayer.Concrete.Contact

@{
    ViewBag.Title = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-md-12">

                    <h1>Mesaj Detayları</h1>

                   


                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-sm-3">

                    <a href="/Contact/SendBox" class="btn btn-primary btn-block mb-3">Gelen Kutusuna Dön</a>
                </div>



                <!-- /.col -->

                <div class="col-md-12">

                    <div class="card card-primary card-outline">

                        <div class="card-header">

                            <h3 class="card-title">Mesaj Detayları</h3>

                            <div class="card-tools">

                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>

                                <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>

                            </div>

                        </div>

                        <!-- /.card-header -->
                       
                        <div class="card-body p-0">
                            @using (Html.BeginForm())
                            {


                                <div class="mailbox-read-info">

                                    <h5>Gönderen: <b> @Html.DisplayFor(x => x.Name)@Html.DisplayFor(x => x.Surname)</b></h5>

                                    <h6>
                                        <br/>
                                        Mail Adresi: @Html.DisplayFor(x=>x.Mail)

                                              <span class="mailbox-read-time float-right">@(((DateTime)Model.MessageDate).ToString("dd-MMM-yyyy"))</span>

                                    </h6>

                                </div>

                                <!-- /.mailbox-read-info -->


                                    <!-- /.btn-group -->

                                   

                              

                                <!-- /.mailbox-controls -->

                                <div class="mailbox-read-message">

                                    <p>@Model.Message</p>

                                  

                                </div>

                                <!-- /.mailbox-read-message -->
                            }
                            </div>
                           
                        <!-- /.card-body -->

                        <div class="card-footer">

                            <div class="float-right">

                                <button type="button" class="btn btn-default"><i class="fas fa-reply"></i> Yanıtla</button>

                                <button type="button" class="btn btn-default"><i class="fas fa-share"></i> İlet</button>

                            </div>

                            <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Sil</button>

                            <button type="button" class="btn btn-default"><i class="fas fa-print"></i> Yazdır</button>

                        </div>

                        <!-- /.card-footer -->

                    </div>

                    <!-- /.card -->

                </div>

                <!-- /.col -->

            </div>

            <!-- /.row -->

        </div>

    </section>

</body>

</html>


