@using PagedList;
@using PagedList.Mvc
@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<!DOCTYPE html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>
                            <th style="width: 1%">

                                Author ID

                            </th>

                            <th style="width: 1%">

                                Blog ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 30%">

                                Yazar Adı

                            </th>

                            <th>

                                Kategori

                            </th>

                            <th style="width: 8%">

                                Tarih

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>

                                    @item.AuthorID

                                </td>

                                <td>

                                    @item.BlogID

                                </td>

                                <th>
                                    @item.BlogTitle
                                </th>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                            <br />@item.Author.AuthorName

                                        </li>



                                    </ul>

                                </td>

                                <td>
                                    @item.Category.CategoryName

                                </td>


                                <td class="project_progress">



                                    <br />
                                    @item.BlogDate



                                </td>

                                <td class="project-state">

                                    <span class="badge badge-success">Aktif</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Yazı Detayı

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>


                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBLog/@item.BlogID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->


        <a href="/Blog/AddNewBlog" class="btn btn-outline-info">Yeni Blog Ekle</a>

    </section>



</body>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("AuthorBlogList", new { page }))





