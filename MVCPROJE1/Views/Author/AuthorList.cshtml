@model IEnumerable<EntityLayer.Concrete.Author>
@{

    ViewBag.Title = "AuthorList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->

        <section class="content">

            <!-- Default box -->


            <div class="card card-solid">



                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {

                            <div class="col-10 col-sm-10 col-md-4 d-flex align-items-end">

                                <div class="card bg-light">

                                    <div class="card-header text-muted border-bottom-0">

                                        @item.AuthorTitle

                                    </div>

                                    <div class="card-body pt-0">

                                        <div class="row">

                                            <div class="col-7">

                                                <h2 class="lead"><b>@item.AuthorName</b></h2>

                                                <p class="text-muted text-sm"><b>Hakkında: </b>@item.AuthorShort </p>

                                                <ul class="ml-4 mb-0 fa-ul text-muted">

                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span>@item.Mail</li>



                                                </ul>

                                            </div>

                                            <div class="col-5 text-center">

                                                <img src="@item.AuthorImage" alt="" class="img-circle img-fluid">

                                            </div>

                                        </div>


                                    </div>

                                    <div class="card-footer">

                                        <div class="text-right">

                                            <a href="/Blog/AuthorBloglist/@item.AuthorID" class="btn btn-sm bg-teal">

                                                <i class="fas fa-comments"></i>Yazarın blogları

                                            </a>

                                            <a href="/Author/AuthorEdit/@item.AuthorID" class="btn btn-sm btn-primary">

                                                <i class="fas fa-user"></i> Profili Düzenle

                                            </a>

                                        </div>

                                    </div>

                                </div>

                            </div>
                        }
                    </div>

                </div>

            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

        <a href="/Author/AddAuthor" class="btn btn-primary">Yeni Yazar Girişi</a>
    </div>

    <!-- /.control-sidebar -->

</body>

</html>
