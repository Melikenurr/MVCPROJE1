@using PagedList;
@using PagedList.Mvc





@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<!DOCTYPE html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                Blog ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 30%">

                                Yazar Adı

                            </th>

                            <th>

                                Kategori

                            </th>

                            <th style="width: 8%">

                                Tarih

                            </th>


                            @*<th>

                                    Durum

                                </th>*@




                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <th>
                                    @item.BlogTitle
                                </th>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                            <br />@item.Author.AuthorName

                                        </li>



                                    </ul>

                                </td>

                                <td>
                                    @item.Category.CategoryName

                                </td>


                                <td class="project_progress">




                                    @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))



                                </td>

                                @*<td class="project-state">

                                        <span class="badge badge-success">@item.BlogStatus</span>

                                    </td>*@

                            <td class="project-actions text-right">

                                <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID">

                                    <i class="fas fa-folder">

                                    </i>

                                    Yazı Detayı

                                </a>

                                <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">

                                    <i class="fas fa-pencil-alt">

                                    </i>


                                    Düzenle

                                </a>


                                <a class="btn btn-danger btn-SM" href="/Blog/DeleteBlog/@item.BlogID">

                                    <i class="fas fa-pencil-alt">

                                    </i>

                                    sil

                                </a>


                                @*<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Modal1">
        Sil*@
                                @*</button>
        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="row-cols-6 ">

                        <div class="col-sm-12">
                            <form>

                                <br />

                                <label>Blogu silmek istediğinize emin misiniz?</label>
                                <br />
                                <br />
                                <a class="btn btn-danger" href="/Blog/DeleteBlog/@item.BlogID">Sil</a>
                                <br />
                                <br />

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>*@
                            </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("AdminBlogList", new { page }))
        <!-- /.card -->


        <a href="/Blog/AddNewBlog" class="btn btn-outline-info">Yeni Blog Ekle</a>

    </section>

</body>



<link href="~/Content/PagedList.css" rel="stylesheet" />


