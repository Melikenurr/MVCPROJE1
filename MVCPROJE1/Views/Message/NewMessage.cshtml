@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Compose Message</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/AdminLTE-3.0.4/plugins/summernote/summernote-bs4.css" rel="stylesheet" />


    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="../../plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>






<body class="hold-transition sidebar-mini">

    <section class="content header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                    <h1>

                        Yeni mesaj Oluşturma Sayfası
                    </h1> </br>
                    <a href="/Contact/SendBox" class="btn btn-primary btn-block mb-3">   Gelen Kutusuna Geri Dön</a>
                    <!-- /.card -->
                </div>
            </div>
                @using (Html.BeginForm("NewMessage", "Message", FormMethod.Post))
                {

                    <!-- /.col -->
                    <div class="col-md-12">
                        <div class="card card-primary card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Mesaj Gönder</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.Label("Alıcı Maili")
                                    @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })

                                    @*<input class="form-control" placeholder="Kime:">*@
                                </div>
                                <div class="form-group">
                                    @Html.Label("Konu:")
                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })

                                  
                                </div>
                                <div class="form-group">
                                    @Html.Label("Mesajınız")
                                    @Html.TextAreaFor(x => x.MessageAll, new { @class = "form-control" })

                                </div>


                                <i class="fas fa-paperclip"></i> Dosya Ekle
                         
                                <form action="/profile/upload" method="post" enctype="multipart/form-data">

                                    <label for="photo">Photo:</label>
                                    @*<input type="file" name="photo" id="photo" />*@
                                    @Html.TextBoxFor(x => x.File, new { type = "file" })
                                    @*<input type="submit" value="Upload" />*@
                                </form>


                                <p class="help-block">Max. 32MB</p>

                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                   
                                </div>
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </div>}
                <!-- /.col -->
            
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>



    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4//plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4//plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4//dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.0.4//dist/js/demo.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLTE-3.0.4//plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })</script>
</body>
</html>



