@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Blog Ekle</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("UpdateBlog", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {


                <div class="form-group" method="post">
                    <p>
                        Blog Id:

                        @Html.TextBoxFor(x => x.BlogID, new { @style = "form-control" })

                    </p>
                </div>



                <div class="form-group">
                    @Html.Label("Blog Başlığı:")<br />
                    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })


                </div>

                <div class="form-group">
                    @Html.Label("Blog Yazısı: ")
                    @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    @Html.Label("Tarih:")<br />
                    @Html.EditorFor(model => model.BlogDate, new { htmlAttributes = new { @class = "datepicker" } })
                </div>





                <p>Resim Ekleyin:</p>
                <input type="file" name="BlogImage" />

                <br />


                <div class="form-group" method="get">


                    @Html.Label("kategori")
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)
                       ViewBag.values, new
                       {
                           @class = "form-control"
                       })

                </div>
                <div class="form-group" method="get">


                    @Html.Label("Yazar adı")
                    @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)
                       ViewBag.values2, new
                       {
                           @class = "form-control"
                       })

                </div>
                <input type="submit" value="Kaydet" />

                @*<button type="submit" class="btn btn-primary">Güncelle</button>*@


            }
            <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
            @section scripts{

                <script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>

                <script>

                    $(function () {
                        $(".datepicker").datepicker();


                    });





                </script>
            }


        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>




