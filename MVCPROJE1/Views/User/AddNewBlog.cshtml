@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "AddNewBlog";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
<!-- Main content -->
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Blog Ekle</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddNewBlog", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                

                <div class="form-group">
                    @Html.Label("Blog Başlığı:")<br />
                    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })


                </div>

                <div class="form-group">
                    @Html.Label("Tarih:")<br />
                    @Html.EditorFor(model => model.BlogDate, new { htmlAttributes = new { @type = "date" } })
                </div>
                

                <div class="form-group">
                    @Html.Label("Blog Yazısı: ")
                    @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control" })

                </div>

                @Html.Label("kategori")<br />
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)
                   ViewBag.values, new
                   {
                       @class = "form-control"
                   })

                @Html.Label("Yazar adı")<br />
                @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)
                   ViewBag.values2, new
                   {
                       @class = "form-control"
                   })


                <p>Resim Ekleyin:</p>
                <input type="file" name="BlogImage" />
                <input type="submit" value="Kaydet" />

                <br />



            }

         

            <br />

        


          



        </div>
                <!-- /.card-body -->
            </div>
    <!-- /.card -->
</div>

