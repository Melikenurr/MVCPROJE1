@using PagedList;
@using PagedList.Mvc




@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "Bloglist";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<!DOCTYPE html>

<body class="hold-transition sidebar-mini">




    <section class="content">



        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Blog Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                Blog ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 30%">

                                Yazar Adı

                            </th>

                            <th>

                                Kategori

                            </th>

                            <th style="width: 8%">

                                Tarih

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <th>
                                    @item.BlogTitle
                                </th>


                                <td>
                                    @item.Author.AuthorName


                                </td>

                                <td>
                                    @item.Category.CategoryName

                                </td>


                                <td class="project_progress">



                                    <br />
                                    @item.BlogDate



                                </td>

                                @*<td class="project-state">

                                        <span class="badge badge-success">Aktif</span>

                                    </td>*@

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Yazı Detayı

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>


                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/User/DeleteBlog/@item.BlogID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>
                                    @*<a  class="btn btn-danger" data-toggle="modal" data-target="#Modal1">
                                            Sil
                                        </a>
                                        <div class="modal" id="Modal1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">

                                                    <div class="row-cols-6 ">

                                                        <div class="col-sm-12">
                                                            <form>

                                                                <br />

                                                                <label>Blogu silmek istediğinize emin misiniz?</label>
                                                                <br />
                                                                <br />
                                                                <a class="btn btn-danger" href="/User/DeleteBlog/@item.BlogID">Sil</a>
                                                                <br />
                                                                <br />

                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>*@

                                </td>

                            </tr>
                        }

                    </tbody>

                </table>

            </div>



        </div>

        @Html.PagedListPager((IPagedList)Model, page => Url.Action("BlogList", new { page }))

        <a href="/User/AddNewBlog" class="btn btn-outline-light" style="        background-color: rgb(139 ,123 ,139)">Yeni Blog Ekle</a>

    </section>

</body>


<link href="~/Content/PagedList.css" rel="stylesheet" />





