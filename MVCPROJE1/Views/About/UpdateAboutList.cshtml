@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <div class="col-sm-12">

        <!-- Main content -->

        


            <div class="row">

                <div class="col-lg-12">

                    <div class="card card-primary">

                        <div class="card-header">

                            <h3 class="card-title">Hakkımızda</h3>

                            <div class="card-tools">

                                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                    <i class="fas fa-minus"></i>

                                </button>

                            </div>

                        </div>
                        @* btona tıkladığım zaman post işlemini gerçekleştir *@
                        @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                        {
                            <div class="card-body">
                                @foreach (var item in Model)
                                {

                                    <div class="form-group">

                                        <label for="inputName">ID</label>

                                        <input type="text" name="AboutID" class="form-control" value="@item.AboutID">

                                    </div>

                                    <div class="form-group">

                                        <label for="inputName">Görsel 1</label>

                                        <input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">

                                    </div>

                                    <div class="form-group">

                                        <label for="inputName">Görsel 2</label>

                                        <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">

                                    </div>
                                    <div class="form-group">

                                        <label for="inputName">Görsel 3</label>

                                        <input type="text" name="AboutImage3" class="form-control" value="@item.AboutImage3">

                                    </div>

                                    <div class="form-group">

                                        <label for="inputDescription">Açıklama</label>

                                        <textarea name="AboutContent1" class="form-control" rows="4">@item.AboutContent1</textarea>

                                    </div>
                                    <div class="form-group">

                                        <label for="inputDescription">Açıklama 2</label>

                                        <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>

                                    </div>

                                    <div class="form-group">

                                        <label for="inputDescription">Açıklama 3</label>

                                        <textarea name="AboutContent3" class="form-control" rows="4">@item.AboutContent3</textarea>

                                    </div>


                                }
                                <button class="btn btn-success">Güncelle</button>


                            </div>
                        }

                        <!-- /.card-body -->
                        <a href="/About/Index" class="btn btn-danger">Sayfada Gör</a>
                    </div>

                    <!-- /.card -->

                </div>



            </div>

    </div>

    

</body>

</html>
